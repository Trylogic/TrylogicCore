package tl.starling.viewController{	import starling.display.DisplayObjectContainer;	[DefaultProperty("controllers")]	public class StarlingViewControllerContainer extends StarlingViewController	{		[Outlet]		public var container : DisplayObjectContainer;		private var _controllers : Array = [];		public final function get controllers() : Array		{			return _controllers;		}		public function set controllers( value : Array ) : void		{			value = [].concat( value );			var viewController : StarlingViewController;			for each ( viewController in _controllers.concat() )			{				if ( value.indexOf( viewController ) == -1 )				{					removeController( viewController );				}			}			for each ( viewController in value )			{				viewController.parentViewController = this;			}			_controllers = value;			fillContainer();		}		public function StarlingViewControllerContainer()		{		}		public function addController( value : StarlingViewController ) : void		{			if ( controllers.indexOf( value ) != -1 )			{				return;			}			controllers = controllers.concat( value );		}		public function removeController( value : StarlingViewController ) : void		{			_controllers.splice( _controllers.indexOf( value ), 1 );			value.removeViewFromContainer( container );			value.parentViewController = null;		}		override internal function internalViewLoaded() : void		{			super.internalViewLoaded();			fillContainer();		}		protected function fillContainer() : void		{			if ( !viewIsLoaded )			{				return;			}			var viewController : StarlingViewController;			for each ( viewController in controllers )			{				viewController.addViewToContainerAtIndex( container, -1 );			}		}	}}